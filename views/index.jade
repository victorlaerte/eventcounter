extends layout

block content
    h1= title
    p Bem Vindo ao Event Counter

    div(ng-controller="eventCounterCtrl")

        // Wrapper
        #wrapper

            // EVENT INFO
            #eventInfo(ng-hide="selectedEvent === undefined")
                hide Event Info
                p
                    strong Nome:
                    |  <span>{{selectedEvent.name}}</span>
                    br
                    strong Local:
                    |  <span>{{selectedEvent.location}}</span>
                    br
                    strong Data:
                    |  <span>{{selectedEvent.startDate}}</span>
                    br
                    strong Hora:
                    |  <span>{{selectedEvent.startTime}}</span>
                    br
                    strong Quantidade de Pessoas:
                    |  <span>{{selectedEvent.counter}}</span>
            // /EVENT INFO

            // CURRENT EVENT LIST
            h2 Eventos Hoje
            #eventList
                table
                    thead
                        th Nome do Evento
                        th Local
                        th Data
                        th Hora
                        th Quantidade de Pessoas
                    tbody
                    tr(ng-repeat="event in todayEventList")
                        td 
                            a(href="", ng-click="showEventInfo(event)") {{event.name}}
                        td {{event.location}}
                        td {{event.startDate}}
                        td {{event.startTime}}
                        td {{event.counter}}

            // /CURRENT EVENT LIST

        // /WRAPPER

        // Wrapper
        #wrapper

            // NEXT EVENT LIST
            h2 Eventos Futuros
            #eventList
                table
                    thead
                        th Nome do Evento
                        th Local
                        th Data
                        th Hora
                        th Quantidade de Pessoas
                    tbody
                    tr(ng-repeat="event in nextEventList")
                        td
                            a(href="", ng-click="showEventInfo(event)") {{event.name}}
                        td {{event.location}}
                        td {{event.startDate}}
                        td {{event.startTime}}
                        td {{event.counter}}

            // /NEXT EVENT LIST

        // /WRAPPER


        // Wrapper
        #wrapper

            // PAST EVENT LIST
            h2 Eventos Passados
            #eventList
                table
                    thead
                        th Nome do Evento
                        th Local
                        th Data
                        th Hora
                        th Quantidade de Pessoas
                    tbody
                    tr(ng-repeat="event in pastEventList")
                        td
                            a(href="",ng-click="showEventInfo(event)") {{event.name}}
                        td {{event.location}}
                        td {{event.startDate}}
                        td {{event.startTime}}
                        td {{event.counter}}

            // /PAST EVENT LIST

            button#btnAddEvent(ng-init='showForm=false', ng-click='showForm=!showForm') Adicionar Evento

            // ADD EVENT

            #addEvent(ng-show='showForm==true')
                h2 Add Event
                fieldset
                    input#inputEventName(type='text', placeholder='Nome do evento', ng-model='eventToAdd.name')
                    input#inputEventLocation(type='text', placeholder='Local', ng-model='eventToAdd.location')
                    br
                    input#inputEventStartDate(type='text', placeholder='Data do evento', ng-model='eventToAdd.startDate')
                    input#inputEventStartTime(type='text', placeholder='Hora de início previsto', ng-model='eventToAdd.startTime')
                    br
                    input#inputEventFinishTime(type='text', placeholder='Hora de término previsto', ng-model='eventToAdd.finishTime')
                    input#inputEventEmail(type='text', placeholder='Email', ng-model='eventToAdd.email')
                    br
                    button#btnSendEventRequest(ng-click='sendEventRequest()') Enviar Pedido de Cadastro
                    span (Sujeito à confirmação)

            // /ADD EVENT

        // /WRAPPER